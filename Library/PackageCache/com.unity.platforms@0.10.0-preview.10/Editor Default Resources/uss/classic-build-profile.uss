.classic-build-profile__helpbox
{
    flex-direction: row;
    flex-shrink: 0;
    align-items: center;
    padding: 0px;
    border-width: 1px;
    border-radius: 5px;
    margin: 2px 3px;
    overflow: hidden;
}

.classic-build-profile__icon
{
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    padding: 0px;
    border-width: 0px;
    border-radius: 0px;
    border-color: transparent;
    margin: 5px;
}

.classic-build-profile__message
{
    flex-grow: 1;
    flex-shrink: 1;
    white-space: normal;
    padding: 0px;
    border-width: 0px;
    border-radius: 0px;
    border-color: transparent;
    margin: 5px 5px 5px 0px;
}
